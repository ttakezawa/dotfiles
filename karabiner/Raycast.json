{
  "title": "Mappings for Raycast",
  "rules": [
    {
      "description": "Map Ctrl-' to âŒ˜+esc for taking me back to the main search window",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "escape",
              "modifiers": ["left_command"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com\\.raycast\\.macos$"]
            }
          ]
        }
      ]
    }
  ]
}
