# -*- coding:utf-8; indent-tabs-mode:nil -*-

[user]
	name = Tomohiro Takezawa
	email = ttakezawa@users.noreply.github.com
	signingkey = ttakezawa@users.noreply.github.com
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
	pager = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[color]
	ui = auto
[push]
        default = simple
[log]
        decorate = auto
[alias]
	# utility
	co = !git checkout $(git branch --color | sed 's/.* //' | fzf-tmux --ansi --select-1 --query="$@")
	clean-branch      = !echo '[Dry-run]' && git branch --merged | grep -Pv '^\\*|^\\s*master'
	clean-branch-exec = !                    git branch --merged | grep -Pv '^\\*|^\\s*master' | xargs git branch -d

	# for completion
        cat-file = cat-file
	ls-files = ls-files
        show-ref = show-ref

	# shortcuts
	df  = diff -w
        dfc = diff -w --cached

[url "git@github.com:"]
	insteadOf = https://github.com/
[ghq]
	root = ~/go/src
[grep]
	lineNumber = true
	patternType = perl
[merge]
	conflictstyle = diff3
[diff-so-fancy]
	markEmptyLines = false
