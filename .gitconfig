# -*- coding:utf-8; indent-tabs-mode:nil -*-

[user]
	name = Tomohiro Takezawa
	email = ttakezawa@users.noreply.github.com
	signingkey = ttakezawa@users.noreply.github.com
[commit]
	gpgsign = true
	verbose = true
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
	editor = code --wait
	quotepath = false
[color]
	ui = auto
[push]
	default = simple
[log]
	decorate = auto
	date = iso8601-strict
[merge]
	conflictstyle = diff3
[init]
	defaultBranch = main
[alias]
	# utility
	co = !git checkout $(git branch --color | sed 's/.* //' | fzf-tmux --ansi --select-1 --query="$@")
	clean-branch      = !echo '[Dry-run]' && git branch --merged | grep -Ev '^\\*|^\\s*master'
	clean-branch-exec = !                    git branch --merged | grep -Ev '^\\*|^\\s*master' | xargs git branch -d

	# https://zenn.dev/hikarin/articles/f09f655c47053096f196
	stash-find = !"git fsck --unreachable | awk '/commit/ {print $3}' | xargs git log --merges --no-walk --grep=WIP --all-match"
	stash-pick = cherry-pick -n -m1

	# for completion
	cat-file = cat-file
	ls-files = ls-files
	show-ref = show-ref

	# shortcuts
	df  = diff -w
	dfc = diff -w --cached

[url "git@github.com:"]
	insteadOf = https://github.com/
[ghq]
	root = ~/dev/src
[grep]
	lineNumber = true
	patternType = perl
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[pull]
	ff = only

[include]
	path = ~/.gitconfig.local
[rerere]
	enabled = true
