# -*- coding:utf-8; indent-tabs-mode:nil -*-

[user]
	name = Tomohiro Takezawa
	email = ttakezawa@users.noreply.github.com
	signingkey = ttakezawa@users.noreply.github.com
[commit]
	gpgsign = true
	verbose = true
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
[color]
	ui = auto
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[push]
	default = simple
[log]
	decorate = auto
	date = iso8601-strict
[alias]
	# utility
	co = !git checkout $(git branch --color | sed 's/.* //' | fzf-tmux --ansi --select-1 --query="$@")
	clean-branch      = !echo '[Dry-run]' && git branch --merged | grep -Ev '^\\*|^\\s*master'
	clean-branch-exec = !                    git branch --merged | grep -Ev '^\\*|^\\s*master' | xargs git branch -d

	# for completion
	cat-file = cat-file
	ls-files = ls-files
	show-ref = show-ref

	# shortcuts
	df  = diff -w
	dfc = diff -w --cached

[url "git@github.com:"]
	insteadOf = https://github.com/
[ghq]
	root = ~/go/src
	root = ~/ws
[grep]
	lineNumber = true
	patternType = perl
[merge]
	conflictstyle = diff3
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
